                            <Text text="Portfolio" />
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            hAlign="Center"
                        >
                            <Text text="Issues" />
                        </Column>
                        <Column
                            hAlign="Center"
                            visible="true"
                        >
                            <Text text="Actions" />
                        </Column>
                        
                    </columns>
                    <items>
                        <ColumnListItem
                            type="Navigation"
                            press="onListItemPress"
