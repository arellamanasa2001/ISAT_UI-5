                            <cells>
                                <ObjectIdentifier title="{jsonModel>scenario Id}" text="{jsonModel>description}"/>
                                
             

                                                    	
                                  
                                <ObjectIdentifier
                                    text="{jsonModel>portfolio}"
                                />
                                <ObjectIdentifier text="{jsonModel>issues}" />
                               
                                <Button type="Emphasized" icon="sap-icon://display"></Button>
                                
                                
                               
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
