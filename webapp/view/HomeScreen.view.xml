<mvc:View
    controllerName="com.isat.isatui5.controller.HomeScreen"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:f="sap.f"
    xmlns:uxap="sap.uxap"
    xmlns:m="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:c="sap.suite.ui.commons"
    xmlns:si="sap.suite.ui.commons.statusindicator"
>
    <Page>
        <uxap:ObjectPageLayout height="20%">
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:expandedHeading>
                        <Toolbar>
                            <Button icon="sap-icon://home" />
                            <Label text="Release Name" />

                            <MultiComboBox
                                selectionChange="handleSelectionChange"
                                selectionFinish="handleSelectionFinish"
                                placeholder="All"
                                showSelectAll="true"
                                width="200px"
                                items="{
				path: 'comboJsonModel>/ProductCollection',
				 sorter: { path: 'Name' }
                                           
				
			}"
                            >
                                <core:Item
                                    key="{comboJsonModel>ProductId}"
                                    text="{comboJsonModel>Name}{comboJsonModel>ProductId}"
                                />
                            </MultiComboBox>
                        </Toolbar>
                    </uxap:expandedHeading>
                    <uxap:expandedContent>
                        <m:Text text="List of Scenarios (220)" />
                    </uxap:expandedContent>

                    <uxap:actions>
                        <m:Button
                            text="New"
                            press="onAddButtonPress"
                        />
                        <m:Button
                            type="Transparent"
                            text="Import"
                        />
                        <m:Button
                            type="Transparent"
                            text="Export"
                        />
                    </uxap:actions>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>
        </uxap:ObjectPageLayout>

        <f:FlexibleColumnLayout id="flexibleColumnLayout">
            <f:beginColumnPages>
                <!--  <f:content>  -->
                <!--  DynamicPage Content  -->
                <!--  Table in the initial content  -->

                <Page>
                    <tnt:ToolHeader
                        id="shellLikeToolHeader"
                        class="sapUiTinyMargin"
                    >
                        <SearchField
                            width="16rem"
                            id="searchField"
                            placeholder="Search Scenario ID/ Description/ Portfolio"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow"
                                    group="1"
                                />
                            </layoutData>
                        </SearchField>

                        <ToolbarSpacer />
                        <Button text="Go" />
                        <Button text="Show Filter Bar" />
                        <Button text="Restore" />

                        <Button
                            text="Filters"
                            type="Transparent"
                            tooltip="Notification"
                        />
                    </tnt:ToolHeader>

                    <Table
        id="existingLeadsTable"
        inset="false"
        items="{jsonModel>/leadData}"
        class="sapFDynamicPageAlignContent"
        width="auto"
    >
        <columns>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Scenario ID/ Description" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                <Text text="Portfolio" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                <Text text="Issues" />
            </Column>
            <Column hAlign="Center" visible="true">
                <Text text="Actions" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation" press="onListItemPress">
                <cells>
                    <ObjectIdentifier title="{jsonModel>scenarioId}" text="{jsonModel>description}" />
                    <suite:MicroProcessFlow>
                        <suite:nodes>
                            <suite:MicroProcessFlowNode state="{jsonModel>processFlowStates/0/state}" />
                            <suite:MicroProcessFlowNode state="{jsonModel>processFlowStates/1/state}" />
                            <suite:MicroProcessFlowNode state="{jsonModel>processFlowStates/2/state}" />
                        </suite:nodes>
                    </suite:MicroProcessFlow>
                    <ObjectIdentifier text="{jsonModel>portfolio}" />
                    <ObjectIdentifier text="{jsonModel>issues}" />
                    <Button type="Emphasized" icon="sap-icon://display" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
                </Page>

                <!--  </f:DynamicPage>  -->
                <!--  </f:content>  -->
            </f:beginColumnPages>
            <f:midColumnPages>
                <Page>
                    <uxap:ObjectPageLayout
                        id="ObjectPageLayout"
                        showTitleInHeaderContent="true"
                        alwaysShowContentHeader="false"
                        preserveHeaderStateOnScroll="false"
                        headerContentPinnable="true"
                        isChildPage="true"
                        upperCaseAnchorBar="false"
                    >
                        <uxap:headerTitle>
                            <uxap:ObjectPageDynamicHeaderTitle>
                                <uxap:expandedHeading>
                                    <Title
                                        text="{name}"
                                        wrapping="true"
                                        class="sapUiSmallMarginEnd"
                                    />
                                </uxap:expandedHeading>
                                <uxap:navigationActions>
                                    <OverflowToolbarButton
                                        type="Transparent"
                                        icon="sap-icon://full-screen"
                                        press="handleFullScreen"
                                        id="enterFullScreenBtn"
                                        tooltip="Enter Full Screen Mode"
                                        visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"
                                    />
                                    <OverflowToolbarButton
                                        type="Transparent"
                                        icon="sap-icon://exit-full-screen"
                                        press="handleExitFullScreen"
                                        id="exitFullScreenBtn"
                                        tooltip="Exit Full Screen Mode"
                                        visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"
                                    />
                                    <OverflowToolbarButton
                                        type="Transparent"
                                        icon="sap-icon://decline"
                                        press="handleClose"
                                        tooltip="Close middle column"
                                        visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"
                                    />
                                </uxap:navigationActions>
                            </uxap:ObjectPageDynamicHeaderTitle>
                        </uxap:headerTitle>
                        <uxap:sections>
                            <uxap:ObjectPageSection title="MORE INFO">
                                <uxap:subSections>
                                    <uxap:ObjectPageSubSection>
                                        <uxap:blocks>
                                            <Wizard
                                                id="CreateProductWizard"
                                                finishButtonText="Finish"
                                                currentStep="PricingStep"
                                                class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                                                height="70%"
                                            >
                                                <WizardStep
                                                    id="ProductTypeStep"
                                                    title="Test Scenario Details"
                                                    activate="onActivate"
                                                >
                                                    <Button
                                                        text="button"
                                                        press="ItemPress"
                                                    />
                                                </WizardStep>
                                                <WizardStep
                                                    id="ProductInfoStep"
                                                    title="Select ICO"
                                                    activate="onActivate"
                                                />
                                                <WizardStep
                                                    id="OptionalInfoStep"
                                                    optional="false"
                                                    title="Select Messages"
                                                    activate="onActivate"
                                                />
                                                <WizardStep
                                                    id="PricingStep"
                                                    title="Link Flow"
                                                    activate="onActivate"
                                                />
                                                <WizardStep
                                                    id="Product"
                                                    title="Select Comparison Point"
                                                    activate="onActivate"
                                                />
                                                <WizardStep
                                                    id="ProductInf"
                                                    title="Test Results"
                                                    activate="onActivate"
                                                >
                                                    <Table
                                                        id="testResultsTable"
                                                        items="{/testResults}"
                                                        class="sapUiSmallMargin table"
                                                    >
                                                        <columns>
                                                            <Column>
                                                                <Label
                                                                    text="Created on"
                                                                />
                                                            </Column>
                                                            <Column>
                                                                <Label
                                                                    text="Message ID"
                                                                />
                                                            </Column>
                                                            <Column>
                                                                <Label
                                                                    text="Default Comparison Result"
                                                                />
                                                            </Column>
                                                            <Column>
                                                                <Label
                                                                    text=""
                                                                />
                                                            </Column>
                                                        </columns>
                                                        <items>
                                                            <ColumnListItem>
                                                                <cells>
                                                                    <Text
                                                                        text="{createdOn}"
                                                                    />
                                                                    <Text
                                                                        text="{messageId}"
                                                                    />
                                                                    <ObjectStatus
                                                                        text="{comparisonResult}"
                                                                        state="{= ${comparisonResult} === 'OK' ? 'Success' : ${comparisonResult} === 'ERROR' ? 'Error' : 'None'}"
                                                                        icon="{= ${comparisonResult} === 'OK' ? 'sap-icon://accept' : ${comparisonResult} === 'ERROR' ? 'sap-icon://decline' : ''}"
                                                                    />
                                                                    <HBox>
                                                                        <Button
                                                                            icon="sap-icon://show"
                                                                            text=""
                                                                            press="onEdit"
                                                                        />
                                                                        <Button
                                                                            class="sapUiSmallMarginBeginEnd"
                                                                            press="onDelete"
                                                                            icon="sap-icon://detail-view"
                                                                            text=""
                                                                        />
                                                                        <Button
                                                                            icon="sap-icon://it-host"
                                                                            text=""
                                                                            press="onDuplicate"
                                                                        />
                                                                    </HBox>
                                                                </cells>
                                                            </ColumnListItem>
                                                        </items>
                                                    </Table>
                                                </WizardStep>
                                            </Wizard>
                                        </uxap:blocks>
                                    </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                            </uxap:ObjectPageSection>
                        </uxap:sections>
                    </uxap:ObjectPageLayout>
                    <footer>
                        <Toolbar>
                            <ToolbarSpacer />
                            <Button
                                text="Back"
                                press="onSavePress"
                            />
                            <Button
                                text="Next"
                                press="onSavePress"
                            />
                        </Toolbar>
                    </footer>
                </Page>
            </f:midColumnPages>

            <f:endColumnPages>
                <Page>
                    <uxap:ObjectPageLayout
                        id="endPageLayout"
                        showTitleInHeaderContent="true"
                        alwaysShowContentHeader="false"
                        preserveHeaderStateOnScroll="false"
                        headerContentPinnable="true"
                        isChildPage="true"
                        upperCaseAnchorBar="false"
                    >
                        <uxap:headerTitle>
                            <uxap:ObjectPageDynamicHeaderTitle>
                                <uxap:expandedHeading>
                                    <Title
                                        text="{name}"
                                        wrapping="true"
                                        class="sapUiSmallMarginEnd"
                                    />
                                </uxap:expandedHeading>
                            </uxap:ObjectPageDynamicHeaderTitle>
                        </uxap:headerTitle>

                        <uxap:sections>
                            <uxap:ObjectPageSection title="MORE INFO">
                                <uxap:subSections>
                                    <uxap:ObjectPageSubSection>
                                        <uxap:blocks>
                                            <!-- Content for End Column -->
                                        </uxap:blocks>
                                    </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                            </uxap:ObjectPageSection>
                        </uxap:sections>
                    </uxap:ObjectPageLayout>
                </Page>
            </f:endColumnPages>
        </f:FlexibleColumnLayout>
    </Page>
</mvc:View>
